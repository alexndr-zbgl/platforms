@page
@model lab5.Pages.Books.EditModel


<h1>Edit book</h1>
<form method="post">
	<input asp-for="book.Id" hidden />
	<div class="form-group row">
		<label>Name</label>
		<div class="col-sm-10">
			<input asp-for="book.Name" />
			<span asp-validation-for="book.Name"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Author</label>
		<div class="col-sm-10">
			<input asp-for="book.Author" />
			<span asp-validation-for="book.Author"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Price</label>
		<div class="col-sm-10">
			<input asp-for="book.Price" />
			<span asp-validation-for="book.Price"></span>
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Edit book</button>
	</div>
</form>