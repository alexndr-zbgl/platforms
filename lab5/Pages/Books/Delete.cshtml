@page
@model lab5.Pages.Books.DeleteModel

<h1>Delete book</h1>

<form method="post">
	<input asp-for="book.Id" hidden />
	<div class="form-group row">
		<label>Name</label>
		<div class="col-sm-10">
			<input asp-for="book.Name" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Author</label>
		<div class="col-sm-10">
			<input asp-for="book.Author" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Price</label>
		<div class="col-sm-10">
			<input asp-for="book.Price" disabled />
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Delete book</button>
	</div>
</form>