@model lab5.Pages.Authors.DeleteModel

<h1>Delete person</h1>

<form method="post">
	<input asp-for="author.ID" hidden />
  <div class="form-group row">
	  <label>First Name</label>
	  <div class="col-sm-10">
		  <input asp-for="author.FirstName" disabled />
	  </div>
  </div>
