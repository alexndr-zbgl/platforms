@page
@model lab5.Pages.Authors.IndexModel

<div class="d-flex justify-content-between align-items-center pb-2">
    <h1>Persons</h1>
    <a asp-page="Create" class="btn btn-success">Add person</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <th scope="row">@author.FirstName</th>
                <td>@author.LastName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@author.ID" class="btn btn-secondary">Edit author</a>
                </td>
                <td>
                    <a asp-page="Delete" asp-route-id="@author.ID" class="btn btn-danger">Delete author</a>
                </td>
            </tr>
        }
    </tbody>
</table>
