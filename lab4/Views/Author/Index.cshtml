@model IEnumerable<lab4.Models.Author>
@{
    ViewData["Title"] = "Author";
}
<div class="d-flex justify-content-between align-items-center pb-2">
    <h1>Author</h1>
    <a asp-controller="Author" asp-action="Create" class="btn btn-success">Add person</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <th scope="row">@person.FirstName</th>
                <td>@person.LastName</td>
             
                <td>
                    <a asp-controller="Person" asp-action="Edit" asp-route-id="@person.ID" class="btn btn-secondary">Edit person</a>
                </td>
                <td>
                    <a asp-controller="Person" asp-action="Delete" asp-route-id="@person.ID" class="btn btn-danger">Delete person</a>
                </td>
            </tr>
        }
    </tbody>
</table>