@page "/author/delete/{id:int}"
@using lab6.Data
@using lab6.Services
@inject AuthorService authorService
@inject NavigationManager navigationManager
<h1>Delete author</h1>
<EditForm Model="author" OnSubmit="DeleteAuthor">
	<InputNumber @bind-Value="author.ID" hidden />
	<div class="form-group row">
		<label>First Name</label>
		<div class="col-sm-10">
			<InputText @bind-Value="author.FirstName" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Last Name</label>
		<div class="col-sm-10">
			<InputText @bind-Value="author.LastName" disabled />
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Delete</button>
	</div>
</EditForm>
@code {
	[Parameter]
	public int? Id { get; set; }
	Author author = new Author();

	protected override async Task OnParametersSetAsync()
	{
		if (Id != null)
		{
			author = await authorService.GetAuthor((int)Id);
		}
	}
	public async Task DeleteAuthor()
	{
		await authorService.Delete(author.ID);
		navigationManager.NavigateTo("/authors");
	}
}